<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" _  "
        android:id="@+id/letraf"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" _  "
        android:id="@+id/letrao"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/letraf"
        android:layout_toEndOf="@+id/letraf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" _  "
        android:id="@+id/letrac"
        android:layout_alignTop="@+id/letrao"
        android:layout_toRightOf="@+id/letrao"
        android:layout_toEndOf="@+id/letrao" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" _ "
        android:id="@+id/letrau"
        android:layout_alignTop="@+id/letrac"
        android:layout_toRightOf="@+id/letrac"
        android:layout_toEndOf="@+id/letrac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" _  "
        android:id="@+id/letras"
        android:layout_alignBottom="@+id/letrau"
        android:layout_toRightOf="@+id/letrau"
        android:layout_toEndOf="@+id/letrau" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/letrau"
        android:layout_toLeftOf="@+id/letras"
        android:layout_toStartOf="@+id/letras"
        android:minWidth="1dp"
        android:width="1dp"
        android:maxLength="1"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre de una Pelicula"
        android:id="@+id/titulo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/letrau"
        android:layout_alignStart="@+id/letrau" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprobar Letra"
                android:id="@+id/button"
                android:layout_marginBottom="69dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/input"
                android:layout_toEndOf="@+id/input"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/texto"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="20dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
